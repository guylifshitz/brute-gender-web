<div class="jumbotron" id="check_word"> 
<div class="container">

      <div align="right">
      <% if @play_word_sound %>
        <button class="btn btn-default" type="button"> <span class="glyphicon glyphicon-volume-off fa-1x" /></button>
      <% else %>
          <button class="btn btn-default" type="button"> <span class="glyphicon glyphicon-volume-up" /></button>
      <% end %> 
      </div>

    <h1 align="center" id="word"><%= @word_score.word[:word] %></h1>
    <p align="center" class="word-def-fr"><%= @definition_fr %> </p>
    <p align="center" class="word-def-en"><%= @definition_en %> </p>

    <div align="center">

    <% if @f_clicked %>
      <% if @correct %>
        <button class="btn btn-lg btn-success" type="button"> F <span class="glyphicon glyphicon-ok" /></button>
      <% else %>
        <button class="btn btn-lg btn-danger" type="button"> F <span class="glyphicon glyphicon-remove" /></button>
      <% end %>
      <button class="btn btn-lg" type="button">M</button>
    <% else %>
      <button class="btn btn-lg" type="button">F</button>
      <% if @correct %>
        <button class="btn btn-lg btn-success" type="button">M<span class="glyphicon glyphicon-ok" /></button>
      <% else %>
        <button class="btn btn-lg btn-danger" type="button">M<span class="glyphicon glyphicon-remove" /></button>
      <% end %>
    <% end %>
    </div>

    <%= form_for @level_instance, url: wizard_path, method: :put do |f| %>
      <div class="row">
        <div class="col-sm-12 text-center"'>
          <input type="submit" value="Next" id="next" class="btn btn-primary btn-lg hidden">
      </div>
    </div>
    <% end %>
  </div>
</div>


