<!DOCTYPE html>

<script src="http://code.responsivevoice.org/responsivevoice.js"></script>

<html>
<head>
  <title>BruteGenre</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
 <p class="alert alert-success"><%= notice %></p>
<% end %>

<% if alert %>
 <p class="alert alert-danger"><%= alert %></p>
<% end %>

<nav class="navbar navbar-dark bg-inverse navbar-fixed-top"  role="navigation" >
  <%= link_to "brute_genre", categories_path, :class=>"navbar-brand" %>
  <ul class="nav navbar-nav">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Levels", categories_path , :class=>"nav-item-link btn btn-navbar" %>
      </li>
      <li class="nav-item">
        <%= link_to "Your Words", word_scores_path, :class=>"nav-item-link btn btn-navbar" %>
      </li>
    <% end %>
  </ul>

  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li class="nav-item">
       <%= link_to "Log out", destroy_session_path(:user), :class=>"nav-item-link btn btn-navbar", :method => :delete %>
        </li>
     <% else %>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, :class=>"nav-item-link btn btn-navbar" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign in", new_user_session_path, :class=>"nav-item-link btn btn-navbar" %>
      </li>
     <% end %>
    </ul>
</nav>

<div class="brute-content">

<%= yield %>

</div>

</body>
</html>
