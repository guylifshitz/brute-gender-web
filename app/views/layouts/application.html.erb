<!DOCTYPE html>

<script src="http://code.responsivevoice.org/responsivevoice.js"></script>

<html>
<head>
  <title>BruteGenre</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
 <p class="alert alert-success"><%= notice %></p>
<% end %>

<% if alert %>
 <p class="alert alert-danger"><%= alert %></p>
<% end %>





<!-- <nav class="navbar navbar-dark bg-inverse navbar-fixed-top"  role="navigation" > -->
<nav class="navbar navbar-default bg-primary navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "brute_genre", categories_path, :class=>"navbar-brand" %>
    </div>

    <!-- Collect the nav links for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item <%= cp_menu 'categories' %>">
            <%= link_to "Levels", categories_path , :class=>"nav-item-link btn btn-navbar" %>
          </li>
          <li class="nav-item <%= cp_menu 'word_scores' %>">
            <%= link_to "Test Words", word_scores_path, :class=>"nav-item-link btn btn-navbar" %>
          </li>
          <li class="nav-item <%= cp_menu 'word_scores' %>">
            <%= link_to "Your Words", user_words_path, :class=>"nav-item-link btn btn-navbar" %>
          </li>
          <li class="nav-item <%= cp_menu 'word_scores' %>">
            <%= link_to "Find Words", search_path, :class=>"nav-item-link btn btn-navbar" %>
          </li>
        <% end %>
      </ul>

      <!--  Right side of navbar -->
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Log out", destroy_session_path(:user), :class=>"nav-item-link btn btn-navbar", :method => :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, :class=>"nav-item-link btn btn-navbar" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, :class=>"nav-item-link btn btn-navbar" %>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="brute-content">

<%= yield %>

</div>

</body>
</html>
