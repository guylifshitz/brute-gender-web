<div class="jumbotron">
  <div class="container">


    <div class="row">
      <div class="col-xs-12" >


        <div class="row">
          <h1 class="text-center"><%= @name %></h1>
        </div>

        <div class="row">

          <div class="col-xs-4 text-center">
            <%= link_to category_level_path(@level.category.id, @level.id-1), :class => "btn btn-lg" do %>
              <button class="btn btn-primary btn-lg " type="button"> <span class="glyphicon glyphicon-chevron-left fa-1x" /></button>
            <% end %>
          </div>
          
          <div class="col-xs-4">
              <p class="text-center"><%= @description %> </p>
          </div>

          <div class="col-xs-4 text-center">
            <%= link_to category_level_path(@level.category.id, @level.id+1), :class => "btn btn-lg" do %>
              <button class="btn btn-primary btn-lg " type="button"> <span class="glyphicon glyphicon-chevron-right fa-1x" /></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-12 text-center"'>
        <%= link_to level_instances_path(:level_id => @level.id), :method => :post, :class => "btn btn-lg btn-primary", :title => Level.find(@level.id)[:description] do %>
            Start
            <span class="glyphicon glyphicon-play"></span> 
        <% end %>
      </div>
    </div>


    <br>
    <br>
    <br>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-4"'>
        <table class="table">
          <thead>
            <tr>
            <th width="40%">Word</th>
            <th width="20%">Gender</th>
            <th width="20%"><span data-toggle="tooltip" style="border-bottom: 1px dotted black" title="Over the last three runs.">Correct</span></th>
            </tr>
          </thead>
          <tbody>
            <% #@level.words.order("frequency DESC").each do |word| %>
            <% @words.each do |word| %>
              <tr>
                <td align="left">
                <%= word[:word]%>
                <% if @word_correct_counts[word] == 1 %>
                  <span class=" glyphicon glyphicon-ok-circle" style='color:green'></span></td>
                <% else %>
                  <span class=" glyphicon glyphicon-remove-circle" style='color:red'></span></td>
                <% end %>
                <td><%= word[:gender] %></td>

                <% if @word_correct_counts[word] == "-" %>
                  <td> - </td>
                <% else %>
                  <td><%= (@word_correct_counts[word] * 100).to_i %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
